{
  "manifest_version": 3,
  "name": "MCP Broker-Client Clock Demo",
  "version": "1.1.0",
  "description": "Demo: Chrome extension with clock page, kokoro-tts, broker-client tool publishing, and Streamable HTTP MCP client",
  "permissions": ["tabs"],
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "property-rc.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src http://localhost:* ws://localhost:*"
  }
}
